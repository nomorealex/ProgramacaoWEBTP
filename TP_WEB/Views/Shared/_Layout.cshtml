                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="UserRolesManager" asp-action="Index">Associar Roles</a></li>
                                                <li><a class="dropdown-item" asp-controller="Agendamentos" asp-action="Index">Agendamentos</a></li>
                                                -->
                                            </ul>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="#" asp-action="#">DashBoard</a>
                                        </li>
                                    }
                                    else if (@User.IsInRole("Cliente"))
                                    {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                AGENDAMENTOS
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="Agendamentos" asp-action="OsMeusAgendamentos">Os meus agendamentos</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="Agendamentos" asp-action="Pedido">Pedido de Agendamento</a></li>
                                            </ul>
                                        </li>
                                    }
                                }
                                <li></li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contactos">CONTACTOS</a>
                                </li>
                            </ul>
                            <!--<partial name="~/Views/Cursos/QuickSearchPartial.cshtml" />-->
                            <partial name="_LoginPartial" />

                        </div>
                    </div>
                </nav>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">INÍCIO</a>
                                </li>
                                
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Veiculos" asp-action="Index">VEICULOS</a>
                                    </li>

                                    <!--
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">CATEGORIAS</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="TipoDeAulas" asp-action="Index">AULAS</a>
                                    </li>-->
                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (@User.IsInRole("Admin"))
                                    {
                                        <!--
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Categorias
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-controller="Categorias" asp-action="Index">Listar</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="Categorias" asp-action="Create">Criar</a></li>
                                            </ul>
                                        </li>-->
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Veiculos
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Listar Categorias</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Criar Categoria</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Editar Categoria</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Apagar Categoria</a></li>
                                            </ul>
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Empresas
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Listar Empresas</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Gerir Empresas</a></li> <!--Ativar/Desativar empresas-->
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" asp-controller="#" asp-action="#">Adicionar Empresas</a></li>

        <main class="container mt-5 pt-5 text-start">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                <br />&copy Nuno & Patricia 2022 - PWEB Aulas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
